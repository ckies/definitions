{
  "name": "@ckies/definitions",
  "description": "Definitions for Cookies.WTF",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "prebuild": "rm -rf ./lib; rm -rf ./dist",
    "build": "npm run build:json; npm run build:compile",
    "lint": "npm run lint:ts; npm run lint:yaml",
    "lint:ts": "tslint src/*.ts",
    "lint:yaml": "yamllint data/**/*.yaml",
    "test": "jest",
    "validate": "yamale -s schema.yaml dist/",
    "build:json": "./scripts/build.js",
    "build:compile": "tsc",
    "netlify": "npm run netlify:copy; npm run netlify:version",
    "netlify:copy": "cp netlify/* dist/",
    "netlify:version": "dot-json dist/main.json version \"`dot-json package.json version`\"",
    "predeploy": "npm run netlify",
    "deploy": "netlify deploy",
    "prenetlify": "npm run build:json",
    "prepublish": "npm run build:json; npm run build:compile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ckies/definitions.git"
  },
  "keywords": [],
  "author": "Sebastian MÃ¼ller <code@sbstjn.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ckies/definitions/issues"
  },
  "homepage": "https://github.com/ckies/definitions#readme",
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^10.0.3",
    "dot-json": "^1.0.4",
    "jest": "^22.4.3",
    "js-yaml": "^3.11.0",
    "mkdirp": "^0.5.1",
    "netlify-cli": "^1.2.2",
    "ts-jest": "^22.4.4",
    "tslint": "^5.9.1",
    "typescript": "^2.8.3",
    "yaml-lint": "^1.2.3"
  },
  "dependencies": {},
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
